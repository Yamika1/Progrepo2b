@model List<Programming2B_part2.Models.Claims>﻿

@{
ViewBag.Title = "LECTURER CLAIMS DASHBOARD";
Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        @if (Model.Count <0)
        {
        <div class="text-muted">
            No claim to be loaded
        </div>
        }
        else
        {
            <table class="table">
            <thead>
                <tr>
         	<th>Claim ID</th>
             	<th>Claim Type</th>
					<th>Claim Month</th>
					<th>Hours worked</th>
					<th>hourly rate</th>
					<th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {

                        <tr>
                            <td><strong>@claim.ClaimName</strong></td>
                            <td>@claim.ClaimType</td>
                            <td>@claim.ClaimMonth</td>
                            <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate</td>
                            <td>
                                @if (claim.Status == Programming2B_part2.Models.ClaimStatus.Pending)
                                {
                                    <span class="badge bg-sm alert-success text-dark">Pending</span>
                                }
                                else if (claim.Status == Programming2B_part2.Models.ClaimStatus.Approved)
                                {
                                    <span class="badge bg-am alert-success text-dark">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-am alert-success text-dark">Declined</span>

                                }
                            </td>

                            <td>@claim.SubmittedDate</td>
                            <td>
                                <a href="/LecturerViewClaim/Review/@claim.ClaimId" class="btn btn-sm btn-primary">
                                    @(claim.Status== Programming2B_part2.Models.ClaimStatus.Pending ? "Review":"View")
                                </a>
                            </td>
                        </tr>
                        }
            </tbody>
        </table>
        }
    </div>
</div>
