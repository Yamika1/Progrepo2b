@model List<Programming2B_part2.Models.Claims>

@{
	ViewBag.Title = "My Claims";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
	<h2> My Claims</h2>
	<a href="/Lecturer/AddClaim" class="btn btn-primary"> + Add New Claim </a>
</div>

@if (TempData["Success"] != null)
{
	<div class="alert alert-success alert-dismissible fade show">
		@TempData["Success"]
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
	</div>
}

@if (TempData["Error"] != null)
{
	<div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card">
	<div class="card-body">
		@if (Model.Count == 0)
		{
			<div class="text-center py5">
				<p class="text-muted">No claims submitted yet</p>
				<a href="/Lecturer/AddClaim" class="btn btn-primary">Add claim</a>
			</div>
		}
		else
		{
			<table class="table">
				<thead>
				<tr>
					<th>Claim ID</th>
						<th>Claim Type</th>
					<th>Claim Month</th>
					<th>Hours worked</th>
					<th>hourly rate</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>

				@foreach (var claim in Model)
				{
					<tr>
						<td><strong>@claim.ClaimName</strong></td>
						<td>@claim.ClaimType</td>
						<td>@claim.ClaimMonth</td>
							<td>@claim.HoursWorked</td>
							<td>@claim.HourlyRate</td>
							
						<td>
							@if (claim.Status == Programming2B_part2.Models.ClaimStatus.Pending)
							{
								<span class="badge bg-warning text-dark">Pending</span>
							}
							else if (claim.Status == Programming2B_part2.Models.ClaimStatus.Declined)
							{
								<span class="badge bg-danger text-dark">Declined</span>
							}
							else
							{
								<span class="badge bg-success text-dark">Approved</span>
							}
						</td>
						<td>
							<a href="/Lecturer/Details/@claim.ClaimId" class="btn btn-sm btn-outline-primary">View Details</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
		}

	</div>
</div>